            <% if (notas[0].quiz_1 != null){ %> 
                <td><%= notas[0].quiz_1 %></td>
                <% } else {%>
                <td>No cursado</td>%>
                <% }%>
            <% if (notas[0].quiz_2 != null){ %> 
                <td><%= notas[0].quiz_2 %></td>
                <% } else {%>

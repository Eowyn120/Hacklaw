            <% if (notas[0].quiz_4 != null){ %> 
                <td><%= notas[0].quiz_4 %></td>
                <% } else {%>
                <td>No cursado</td>%>
                <% }%>
            <% if (notas[0].quiz_final != null){ %> 
                <td><%= notas[0].quiz_final %></td>
                <% } else {%>
                <td>No cursado</td>%>
                <% }%>
            <% const aprobado = notas[0].quiz_final >= 7; %>
            <td class="<%= aprobado ? 'aprobado' : 'reprobado' %>">
              <%= aprobado ? 'Aprobado' : 'Reprobado' %>
            </td>
          </tr>
